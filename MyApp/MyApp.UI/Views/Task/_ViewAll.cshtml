@model List<Synkron.UI.Models.Task.TaskViewModel>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>Description</label>
                </th>
                <th colspan="2">
                    <label>Status</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(t => task.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Task", new { @id = task.Id }, new { @id = "btn_EditTask_" + task.Id })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    @Html.ActionLink("Create", "Create", "Task", new { @id = "btn_CreateTask" })
                </td>
            </tr>
        </tfoot>
    </table>
</div>
